<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:backgroundTint">@color/brown_2</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="BrogSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/brown_1</item>
        <item name="android:progressTint">@color/brown_2</item>
        <item name="android:colorControlActivated">@color/brown_3</item>
        <item name="android:colorControlNormal">@color/brown_2</item>
        <item name="android:colorControlHighlight">@color/brown_3</item>
        <item name="android:thumbTint">@color/brown_3</item>
    </style>
</resources>