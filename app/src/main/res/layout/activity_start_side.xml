<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="0dp">

    <ImageButton
        android:id="@+id/Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_baseline_settings_24"
        />


    <ImageView
        android:id="@+id/BrewLogo"
        android:layout_width="127dp"
        android:layout_height="147dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        app:srcCompat="@drawable/logo_uden_tekst" />

    <ImageView
        android:id="@+id/BrogTekst"
        android:layout_width="148dp"
        android:layout_height="34dp"
        android:layout_below="@id/BrewLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/logo_tekst" />

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_below="@id/BrogTekst">

        <Button
            android:id="@+id/Brew"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/colorplate1"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/brew"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="19sp" />

        <Button
            android:id="@+id/Clean"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/colorplate1"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/clean"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="19sp" />

        <Button
            android:id="@+id/Community"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/colorplate1"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/community"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="19sp" />

        <Button
            android:id="@+id/Guide"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/colorplate1"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/guide"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="19sp" />

    </LinearLayout>

    <ImageView
        android:layout_marginTop="64dp"
        android:id="@+id/imageView"
        android:layout_width="480dp"
        android:layout_height="76dp"
        android:src="@drawable/footer_copyright_xl"
        android:layout_below="@id/layout_1"
        />

</RelativeLayout>