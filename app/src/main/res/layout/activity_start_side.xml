<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="0dp">

    <include layout="@layout/background"/>
    <include layout="@layout/logo_big"/>
    <include layout="@layout/footer"/>
    <ImageButton
        android:id="@+id/Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/ic_cog" />


    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/see_list"
            style="@style/DefaultButton"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:drawableTop="@drawable/ic_list"
            android:paddingTop="11dp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/brew_now"
            style="@style/DefaultButton"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:drawableTop="@drawable/ic_plus"
            android:paddingTop="6dp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/quick_brew"
            style="@style/DefaultButton"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:drawableTop="@drawable/ic_mug_hot"
            android:paddingLeft="22dp"
            android:paddingTop="11dp"
            app:cornerRadius="100dp" />

    </LinearLayout>
</RelativeLayout>