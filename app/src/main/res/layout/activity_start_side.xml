<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="0dp">

    <ImageView
        android:id="@+id/Bagground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType = "centerCrop"
        app:srcCompat="@drawable/bg" />

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/logo_with_text_description"
        app:srcCompat="@drawable/ic_logo_w_text" />

    <ImageButton
        android:id="@+id/Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/ic_cog" />


    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            app:cornerRadius="70dp"
            android:drawableTop="@drawable/ic_list"
            android:id="@+id/see_list"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:layout_margin="20dp"
            android:paddingTop="6dp"
            style="@style/DefaultButton"/>

        <Button
            app:cornerRadius="70dp"
            android:drawableTop="@drawable/ic_plus"
            android:id="@+id/brew_now"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:layout_margin="20dp"
            android:paddingTop="1dp"
            style="@style/DefaultButton"/>

        <Button
            android:id="@+id/quick_brew"
            style="@style/DefaultButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:paddingTop="6dp"
            android:paddingLeft="22dp"
            android:drawableTop="@drawable/ic_mug_hot"
            app:cornerRadius="70dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/footer_home"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-65dp"
        android:contentDescription="@string/footer_with_copyright_description"
        app:srcCompat="@drawable/ic_footer_copyright" />

</RelativeLayout>