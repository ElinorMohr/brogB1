<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="172dp"
        android:layout_height="247dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/logo_uden_tekst" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="203dp"
        android:layout_height="77dp"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="56dp"
        app:srcCompat="@drawable/logo_tekst" />

    <TextView
        android:id="@+id/clearTekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/clear_standard"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/sprogTekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/language"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/connectTekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connections"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/guideTekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guide"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/infoTekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_gravity="center" />
</LinearLayout>